<AuthenticationFormLayout Header="Login">
    <EditForm Model="LoginRequest" OnValidSubmit="@OnLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Username</label>
            <InputText class="mt-2 form-control" style="outline:none;" id="username" placeholder="Username"
                @bind-Value="LoginRequest.Username" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <InputText type="password" class="mt-2 form-control" style="outline:none;" id="password"
                placeholder="Password" @bind-Value="LoginRequest.Password" />
        </div>

        <div class="mt-3 d-flex align-items-center">
            <button type="submit" class="btn btn-primary">Login</button>
               @if (IsLoggingIn)
            {
                <div class="ml-3 spinner-border text-secondary" role="status" style="width: 1.5em; height: 1.5em;">
                    <span class="sr-only">Loading...</span>
                </div>
            }
        </div>

    </EditForm>
</AuthenticationFormLayout>