<AuthenticationFormLayout Header="Register">
    <EditForm Model="RegisterRequest" OnValidSubmit="@OnRegister">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="email">Email</label>
            <InputText class="mt-2 form-control" style="outline:none;" id="email" placeholder="Email"
                @bind-Value="RegisterRequest.Email" />
        </div>

        <div class="form-group">
            <label for="username">Username</label>
            <InputText class="mt-2 form-control" style="outline:none;" id="username" placeholder="Username"
                @bind-Value="RegisterRequest.Username" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <InputText type="password" class="mt-2 form-control" style="outline:none;" id="password"
                placeholder="Password" @bind-Value="RegisterRequest.Password" />
        </div>

        <div class="form-group">
            <label for="cpassword">Confirm Password</label>
            <InputText type="password" class="mt-2 form-control" style="outline:none;" id="cpassword"
                placeholder="Confirm Password" @bind-Value="RegisterRequest.ConfirmPassword" />
        </div>

        <div class="mt-3 d-flex align-items-center">
            <button type="submit" class="btn btn-primary">Register</button>
            @if (IsRegistering)
            {
                <div class="ml-3 spinner-border text-secondary" role="status" style="width: 1.5em; height: 1.5em;">
                    <span class="sr-only">Loading...</span>
                </div>
            }
        </div>

    </EditForm>
</AuthenticationFormLayout>