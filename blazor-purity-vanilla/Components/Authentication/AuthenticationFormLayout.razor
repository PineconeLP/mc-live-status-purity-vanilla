<div>
    <h1 class="text-center text-sm-left">@Header</h1>
    <div class="mt-3">
        <div class="row">
            <div class="col col-sm-10 col-md-8 col-lg-6">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Header { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}