@using ViewModels;

<ul class="list-group list-group-flush">
    @foreach (ServerListingItemViewModel server in Servers)
    {
        <ServerListingItem Name="@server.Name" 
                           Description="@server.Description" 
                           OnlinePlayers="@server.OnlinePlayers" 
                           MaxPlayers="@server.MaxPlayers" 
                           @bind-IsSelected="@server.IsSelected"/>
    }
</ul>

@code {
    [Parameter]
    public IEnumerable<ServerListingItemViewModel> Servers { get; set; }
}